    //- Header bar
    .menu-container
      .menu
        .links
          .post
            a.post-trigger POST
            .post-modal
              .post-modal-content
                span.post-close-button ×
                h1 Post!
          .sign-up
            a.sign-up-trigger SIGN UP
            .sign-up-modal
              .sign-up-modal-content
                span.sign-up-close-button ×
                h1 sign up!
                form
                | username:
                br
                input(type='text', name='firstname')
                br
                | password:
                br
                input(type='text', name='lastname')
          .sign-in
            a.sign-in-trigger SIGN IN
            .sign-in-modal
              .sign-in-modal-content
                span.sign-in-close-button ×
                h1 please sign in!
                form
                | username:
                br
                input(type='text', name='firstname')
                br
                | password:
                br
                input(type='text', name='lastname')

    //- Hero/logo image
    .header-container
      .header
        .hero
          img(src="images/hero.svg")

    //- Filter
    main
      input#toggle(type='checkbox')
      label(for='toggle')
        .filterbutton
          img(src='images/filterbutton.svg')
